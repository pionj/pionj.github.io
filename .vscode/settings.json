{
  "editor.minimap.enabled": false,
  "editor.wrappingIndent": "indent",
  "editor.overviewRulerBorder": false,
  "editor.lineHeight": 0,
  "workbench.colorTheme": "Quiet Light",
  "[markdown]": {
  },
  "files.exclude": {
    "**/node_modules": true
  },
  "files.watcherExclude": {
    "**/node_modules": true
  },
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "none",
  "github-actions.workflows.pinned.workflows": [],
  "auto-front-matter.date.format": "YYYY-MM-DDTHH:mm:ssZ", // 'date' 필드의 형식을 지정합니다.
  "auto-front-matter.fields": [
    {
      "name": "date",
      "type": "date",
      "updateOnSave": true // 저장 시 'date' 필드를 자동으로 업데이트하도록 지시합니다.
    },
    {
      "name": "lastmod",
      "type": "date",
      "updateOnSave": true // 저장 시 'lastmod' 필드를 자동으로 업데이트하도록 지시합니다.
    }
  ]
}
